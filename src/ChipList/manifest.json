{
  "displayName": "Horizontal Chip List",
  "defaultWidth": 375,
  "defaultHeight": 80,
  "components": "./index.js",
  "icon": "./Chip-List-Thumbnail.png",
  "props": [
    {
      "name": "imageList",
      "displayName": "What is this a list of?",
      "type": "list"
    },
    {
      "name": "imageSpacing",
      "displayName": "List Items Spacing",
      "type": "number",
      "default": 8,
      "control": { "type": "slider", "max": 30, "min": 0 }
    },
    {
      "name": "clickActions",
      "displayName": "Click Actions",
      "type": "action",
      "role": "listItem",
      "reference": "imageList"
    }
  ],
  "childComponents": [
    {
      "name": "text",
      "displayName": "Text",
      "role": "listItem",
      "reference": "imageList",
      "props": [
        {
          "name": "title",
          "displayName": "Title Text",
          "type": "text",
          "default": "Title",
          "styles": {
            "fontFamily": "@body",
            "color": "@text",
            "fontWeight": "600"
          }
        }
      ]
    },
    {
      "name": "image",
      "displayName": "Image",
      "role": "listItem",
      "reference": "imageList",
      "props": [
        {
          "name": "enabled",
          "type": "boolean",
          "default": true
        },
        {
          "name": "image",
          "displayName": "Chip Image",
          "type": "image"
        },
        {
          "name": "imageRounding",
          "displayName": "Image Rounding",
          "type": "number",
          "default": 0,
          "control": { "type": "slider", "max": 20, "min": 0 }
        }
      ]
    },
    {
      "name": "rightIcon",
      "displayName": "Right Icon",
      "role": "listItem",
      "reference": "imageList",
      "props": [
        {
          "name": "enabled",
          "type": "boolean",
          "default": false
        },
        {
          "name": "icon",
          "displayName": "Icon",
          "type": "icon",
          "default": "cancel"
        },

        {
          "name": "iconColor",
          "displayName": "Icon Color",
          "type": "color",
          "default": "#424242"
        },
        {
          "name": "iconAction",
          "displayName": "Click Actions",
          "type": "action"
        }
      ]
    },

    {
      "name": "chipStyles",
      "displayName": "Chip Styles",
      "role": "listItem",
      "reference": "imageList",
      "props": [
        {
          "name": "chipSize",
          "displayName": "Chip Size",
          "type": "number",
          "default": 32,
          "control": { "type": "slider", "max": 60, "min": 24 }
        },
        {
          "name": "backgroundColor",
          "displayName": "Background Color",
          "type": "color",
          "default": "#FFFFFF"
        },
        {
          "name": "border",
          "displayName": "Border",
          "type": "boolean",
          "default": true
        },
        {
          "name": "borderColor",
          "displayName": "Border Color",
          "type": "color",
          "default": "#e0e0e0",
          "enabled": {
            "border": true
          }
        },
        {
          "name": "borderWidth",
          "displayName": "Border Width",
          "type": "number",
          "default": 1,
          "control": { "type": "slider", "max": 3, "min": 1 },
          "enabled": {
            "border": true
          }
        },
        {
          "name": "rounding",
          "displayName": "Rounding",
          "type": "number",
          "default": 16,
          "control": { "type": "slider", "max": 30, "min": 0 }
        },
        {
          "name": "shadow",
          "displayName": "Shadow",
          "type": "boolean",
          "default": "true"
        }
      ]
    },
    {
      "name": "listEmptyState",
      "displayName": "List Empty State",
      "props": [
        {
          "name": "emptyStateImageStatus",
          "displayName": "Image",
          "type": "text",
          "default": "noImage",
          "control": {
            "type": "menu",
            "options": [
              { "label": "Above Title", "value": "above" },
              { "label": "Below Title", "value": "below" },
              { "label": "No Image", "value": "noImage" }
            ]
          }
        },
        {
          "name": "imageSource",
          "displayName": "Image Source",
          "role": "listItem",
          "reference": "images",
          "type": "image",
          "enabled": {
            "emptyStateImageStatus": ["above", "below"]
          }
        },
        {
          "name": "textTitleDisplay",
          "displayName": "Text",
          "type": "text",
          "default": "titleOnly",
          "control": {
            "type": "menu",
            "options": [
              { "label": "Title Only", "value": "titleOnly" },
              { "label": "Title and Subtitle", "value": "titleAndSubtitle" },
              { "label": "No Text", "value": "noText" }
            ]
          }
        },
        {
          "name": "title",
          "displayName": "Title",
          "type": "text",
          "default": "No List Items",
          "styles": {
            "fontFamily": "@heading",
            "fontWeight": "600",
            "color": "@text",
            "fontSize": "18"
          },
          "enabled": {
            "textTitleDisplay": ["titleOnly", "titleAndSubtitle"]
          }
        },
        {
          "name": "subtitle",
          "displayName": "Subtitle",
          "type": "text",
          "default": "Subtitle",
          "styles": {
            "fontFamily": "@body",
            "color": "#212121",
            "fontWeight": "normal"
          },
          "enabled": {
            "textTitleDisplay": "titleAndSubtitle"
          }
        },
        {
          "name": "buttonType",
          "displayName": "Button Type",
          "type": "text",
          "default": "noButton",
          "control": {
            "type": "menu",
            "options": [
              { "label": "Text Button", "value": "text" },
              { "label": "Outlined Button", "value": "outlined" },
              { "label": "Contained Button", "value": "contained" },
              { "label": "No Button", "value": "noButton" }
            ]
          }
        },
        {
          "name": "buttonText",
          "displayName": "Text",
          "type": "text",
          "default": "Button",
          "styles": {
            "fontFamily": "@body",
            "fontWeight": "600"
          },
          "enabled": {
            "type": ["text", "outlined", "contained"]
          }
        },
        {
          "name": "buttonIcon",
          "displayName": "Icon",
          "type": "icon",
          "default": "add",
          "enabled": {
            "type": ["text", "outlined", "contained"]
          }
        },
        {
          "name": "buttonPrimaryColor",
          "displayName": "Button Color",
          "type": "color",
          "default": "@primary",
          "enabled": {
            "type": ["text", "outlined", "contained"]
          }
        },
        {
          "name": "buttonContrastColor",
          "displayName": "Icon & Text Color",
          "type": "color",
          "default": "@contrast:primaryColor",
          "enabled": { "type": "contained" }
        },
        {
          "name": "buttonWidth",
          "displayName": "Button Width",
          "type": "number",
          "control": {
            "type": "slider",
            "max": 600,
            "min": 50
          },
          "default": 4,
          "enabled": {
            "type": ["text", "outlined", "contained"]
          }
        },
        {
          "name": "buttonBorderRadius",
          "displayName": "Rounding",
          "type": "number",
          "control": {
            "type": "slider",
            "max": 18,
            "min": 0
          },
          "default": 4,
          "enabled": { "type": ["contained", "outlined"] }
        },
        {
          "name": "buttonShadow",
          "displayName": "Shadow",
          "type": "boolean",
          "default": true,
          "enabled": { "type": "contained" }
        },
        {
          "name": "buttonUpperCase",
          "displayName": "Uppercase",
          "type": "boolean",
          "default": true,
          "enabled": {
            "type": ["text", "outlined", "contained"]
          }
        },
        {
          "name": "buttonAction",
          "type": "action",
          "displayName": "Click Actions",
          "enabled": {
            "type": ["text", "outlined", "contained"]
          }
        }
      ]
    }
  ]
}

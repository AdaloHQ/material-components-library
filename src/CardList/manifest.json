              { "label": "Image Top", "value": "top" },
              { "label": "Image Middle", "value": "middle" },
              { "label": "Image Right", "value": "right" }
            ]
          }
        },
        {
          "name": "shape",
          "displayName": "Shape",
          "type": "text",
          "default": "landscape",
          "control": {
            "type": "menu",
            "options": [
              { "label": "Square", "value": "square" },
              { "label": "Portrait", "value": "portrait" },
              { "label": "Landscape", "value": "landscape" }

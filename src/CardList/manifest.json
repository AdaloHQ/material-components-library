            "fontWeight": "600",
            "fontFamily": "@body",
            "fontSize": "18",
            "color": "#9E9E9E"
          }
        },
        {
          "name": "customStyles",
          "displayName": "Search Input Styles",
          "type": "boolean",
          "default": "simple",
          "control": {
            "type": "menu",
            "options": [
              { "label": "Simple Gray & Rounded", "value": "simple" },
              { "label": "Standard Icon & Input", "value": "standard" },
              { "label": "Custom", "value": "custom" }
            ]
          }
        },
        {
          "name": "hasIcon",
          "displayName": "Icon",
          "type": "boolean",
          "default": false,
          "enabled": {
            "customStyles": "custom"
          }
        },

{
  "displayName": "Toggle",
  "icon": "icon.png",
  "defaultWidth": 24,
  "defaultHeight": 24,
  "component": "./index.js",
  "resizeX": false,
  "resizeY": false,
  "props": [
    {
      "name": "input",
      "displayName": "What does this toggle?",
      "type": "boolean",
      "role": "autosaveInput"
    },
    {
      "name": "activeIcon",
      "displayName": "Active Icon",
      "type": "icon",
      "default": "check-box"
    },
    {
      "name": "activeColor",
      "displayName": "Active Color",
      "type": "color",
      "default": "@primary"
    },
    {
      "name": "inactiveIcon",
      "displayName": "Inactive Icon",
      "type": "icon",
      "default": "check-box-outline-blank"
    },
    {
      "name": "inactiveColor",
      "displayName": "Inactive Color",
      "type": "color",
      "default": "#bbb"
    },
    {
      "name": "toggleSize",
      "displayName": "Size",
      "type": "number",
      "default": 24,
      "control": { "type": "slider", "max": 70, "min": 1 }
    },
    {
      "name": "activeActions",
      "displayName": "Additional actions only when toggle is turned ON",
      "type": "action" 
    },
    {
      "name": "inactiveActions",
      "displayName": "Additional actions only when toggle is turned OFF",
      "type": "action" 
    },
    {
      "name": "clickActions",
      "displayName": "Additional actions anytime the toggle is clicked",
      "type": "action" 
    }
  ]
}

{
  "displayName": "Avatar List",
  "defaultWidth": 375,
  "defaultHeight": 80,
  "components": "./index.js",
  "icon": "./thumbnail.png",
  "props": [
    {
      "name": "imageList",
      "displayName": "What is this a list of?",
      "type": "list"
    },
    {
      "name": "image",
      "displayName": "Avatar Image",
      "type": "image",
      "role": "listItem",
      "reference": "imageList"
    },
    {
      "name": "imageSpacing",
      "displayName": "List Items Spacing",
      "type": "number",
      "default": 15,
      "control": { "type": "slider", "max": 30, "min": 0 }
    },
    {
      "name": "avatarClickActions",
      "displayName": "Click Actions",
      "type": "action",
      "role": "listItem",
      "reference": "imageList"
    }
  ],
  "childComponents": [
    {
      "name": "imageChild",
      "displayName": "Image Options",
      "props": [
        {
          "name": "imageSize",
          "displayName": "Image Size (width)",
          "type": "number",
          "default": 69,
          "control": { "type": "slider", "max": 200, "min": 30 }
        },
        {
          "name": "imageRounding",
          "displayName": "Image Rounding",
          "type": "number",
          "default": 40,
          "control": { "type": "slider", "max": 110, "min": 0 }
        },
        {
          "name": "cropMenu",
          "displayName": "Image Cropping",
          "type": "text",
          "default": "cover",
          "control": {
            "type": "menu",
            "options": [
              { "label": "Crop Image to Fill Space", "value": "cover" },
              { "label": "Show Full Image (Don't Crop)", "value": "center" }
            ]
          }
        },
        {
          "name": "background",
          "displayName": "Background",
          "type": "boolean",
          "default": false
        },
        {
          "name": "backgroundColor",
          "displayName": "Background Color",
          "type": "color",
          "default": "#f5f5f5",
          "enabled": {
            "background": true
          }
        },
        {
          "name": "borderBool",
          "displayName": "Border",
          "type": "boolean",
          "default": false
        },
        {
          "name": "borderColor",
          "displayName": "Border Color",
          "type": "color",
          "default": "@primary",
          "enabled": {
            "borderBool": true
          }
        },
        {
          "name": "borderSize",
          "displayName": "Border Size",
          "type": "number",
          "default": 1,
          "control": { "type": "slider", "max": 3, "min": 1 },
          "enabled": {
            "borderBool": true
          }
        }
      ]
    },
    {
      "name": "textChild",
      "displayName": "Text",
      "role": "listItem",
      "reference": "imageList",
      "props": [
        {
          "name": "enabled",
          "type": "boolean",
          "default": true
        },
        {
          "name": "title",
          "displayName": "Title",
          "type": "text",
          "styles": {
            "fontFamily": "@body",
            "fontWeight": "600",
            "color": "@text",
            "textAlignment": "center"
          }
        },
        {
          "name": "textPos",
          "displayName": "Text Position",
          "type": "number",
          "default": 1,
          "control": {
            "type": "menu",
            "options": [
              { "label": "Top", "value": 0 },
              { "label": "Bottom", "value": 1 }
            ]
          }
        }
      ]
    },
    {
      "name": "listEmptyState",
      "displayName": "List Empty State",
      "props": [
        {
          "name": "emptyStateImageStatus",
          "displayName": "Image",
          "type": "text",
          "default": "noImage",
          "control": {
            "type": "menu",
            "options": [
              { "label": "Above Title", "value": "above" },
              { "label": "Below Title", "value": "below" },
              { "label": "No Image", "value": "noImage" }
            ]
          }
        },
        {
          "name": "imageSource",
          "displayName": "Image Source",
          "role": "listItem",
          "reference": "images",
          "type": "image",
          "enabled": {
            "emptyStateImageStatus": ["above", "below"]
          }
        },
        {
          "name": "textTitleDisplay",
          "displayName": "Text",
          "type": "text",
          "default": "noText",
          "control": {
            "type": "menu",
            "options": [
              { "label": "Title Only", "value": "titleOnly" },
              { "label": "Title and Subtitle", "value": "titleAndSubtitle" },
              { "label": "No Text", "value": "noText" }
            ]
          }
        },
        {
          "name": "title",
          "displayName": "Title",
          "type": "text",
          "default": "No List Items",
          "styles": {
            "fontFamily": "@heading",
            "fontWeight": "600",
            "color": "@text",
            "fontSize": "18"
          },
          "enabled": {
            "textTitleDisplay": ["titleOnly", "titleAndSubtitle"]
          }
        },
        {
          "name": "subtitle",
          "displayName": "Subtitle",
          "type": "text",
          "default": "Subtitle",
          "styles": {
            "fontFamily": "@body",
            "color": "#212121",
            "fontWeight": "normal",
            "fontSize": "18"
          },
          "enabled": {
            "textTitleDisplay": "titleAndSubtitle"
          }
        },
        {
          "name": "buttonType",
          "displayName": "Button Type",
          "type": "text",
          "default": "noButton",
          "control": {
            "type": "menu",
            "options": [
              { "label": "Text Button", "value": "text" },
              { "label": "Outlined Button", "value": "outlined" },
              { "label": "Contained Button", "value": "contained" },
              { "label": "No Button", "value": "noButton" }
            ]
          }
        },
        {
          "name": "buttonText",
          "displayName": "Text",
          "type": "text",
          "default": "Button",
          "styles": {
            "fontFamily": "@body",
            "fontWeight": "600"
          },
          "enabled": {
            "buttonType": ["text", "outlined", "contained"]
          }
        },
        {
          "name": "buttonIcon",
          "displayName": "Icon",
          "type": "icon",
          "default": "add",
          "enabled": {
            "buttonType": ["text", "outlined", "contained"]
          }
        },
        {
          "name": "buttonPrimaryColor",
          "displayName": "Button Color",
          "type": "color",
          "default": "@primary",
          "enabled": {
            "buttonType": ["text", "outlined", "contained"]
          }
        },
        {
          "name": "buttonContrastColor",
          "displayName": "Icon & Text Color",
          "type": "color",
          "default": "@contrast:buttonPrimaryColor",
          "enabled": { "buttonType": "contained" }
        },
        {
          "name": "buttonBorderRadius",
          "displayName": "Rounding",
          "type": "number",
          "control": {
            "type": "slider",
            "max": 18,
            "min": 0
          },
          "default": 4,
          "enabled": { "buttonType": ["contained", "outlined"] }
        },
        {
          "name": "buttonShadow",
          "displayName": "Shadow",
          "type": "boolean",
          "default": false,
          "enabled": { "buttonType": "contained" }
        },
        {
          "name": "buttonUpperCase",
          "displayName": "Uppercase",
          "type": "boolean",
          "default": false,
          "enabled": {
            "buttonType": ["text", "outlined", "contained"]
          }
        },
        {
          "name": "buttonAction",
          "type": "action",
          "displayName": "Click Actions",
          "enabled": {
            "buttonType": ["text", "outlined", "contained"]
          }
        }
      ]
    }
  ]
}

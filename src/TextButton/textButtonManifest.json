{
  "displayName": "Button",
  "icon": "./icon.png",
  "defaultWidth": 160,
  "defaultHeight": 36,
  "component": "./TextButton.js",
  "resizeY": true,
  "props": [
    {
      "name": "type",
      "displayName": "Type",
      "type": "text",
      "default": "contained",
      "control": {
        "type": "menu",
        "options": [
          { "label": "Text Button", "value": "text" },
          { "label": "Outlined Button", "value": "outlined" },
          { "label": "Contained Button", "value": "contained" }
        ]
      }
    },
    {
      "name": "text",
      "displayName": "Text",
      "type": "text",
      "default": "Button",
      "styles": {
        "fontFamily": "@body",
        "fontWeight": "600"
      }
    },
    {
      "name": "icon",
      "displayName": "Icon",
      "type": "icon",
      "default": "add"
    },
    {
      "name": "sizing",
      "displayName": "Text & Icon Sizing",
      "type": "number",
      "default": 3,
      "control": {
        "type": "menu",
        "options": [
          { "label": "Gigantic", "value": 0 },
          { "label": "Extra large", "value": 1 },
          { "label": "Large", "value": 2 },
          { "label": "Medium", "value": 3 },
          { "label": "Small", "value": 4 },
          { "label": "Extra small", "value": 5 }
        ]
      }
    },
    {
      "name": "primaryColor",
      "displayName": "Button Color",
      "type": "color",
      "default": "@primary"
    },
    {
      "name": "contrastColor",
      "displayName": "Icon & Text Color",
      "type": "color",
      "default": "@contrast:primaryColor",
      "enabled": { "type": "contained" }
    },
    {
      "name": "borderRadius",
      "displayName": "Rounding",
      "type": "number",
      "control": {
        "type": "slider",
        "max": 18,
        "min": 0
      },
      "default": 4,
      "enabled": { "type": ["contained", "outlined"] }
    },
    {
      "name": "shadow",
      "displayName": "Shadow",
      "type": "boolean",
      "default": false,
      "enabled": { "type": "contained" }
    },
    {
      "name": "upperCase",
      "displayName": "Uppercase",
      "type": "boolean",
      "default": true
    },
    {
      "name": "action",
      "type": "action",
      "displayName": "Click Actions"
    }
  ]
}

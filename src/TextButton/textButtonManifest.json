{
  "displayName": "Button",
  "icon": "./icon.png",
  "defaultWidth": 160,
  "defaultHeight": 36,
  "component": "./TextButton.js",
  "resizeY": true,
  "props": [
    {
      "name": "type",
      "displayName": "Type",
      "type": "text",
      "default": "contained",
      "control": {
        "type": "menu",
        "options": [
          { "label": "Text Button", "value": "text" },
          { "label": "Outlined Button", "value": "outlined" },
          { "label": "Contained Button", "value": "contained" }
        ]
      },
      "style": true
    },
    {
      "name": "text",
      "displayName": "Text",
      "type": "text",
      "default": "Button",
      "styles": {
        "fontFamily": "@body",
        "fontWeight": "600"
      }
    },
    {
      "name": "icon",
      "displayName": "Icon",
      "type": "icon",
      "default": "add"
    },
    {
      "name": "sizing",
      "displayName": "Text & Icon Sizing",
      "type": "number",
      "default": "medium",
      "control": {
        "type": "menu",
        "options": [
          { "label": "Gigantic", "value": "gigantic" },
          { "label": "Extra large", "value": "extraLarge" },
          { "label": "Large", "value": "large" },
          { "label": "Medium", "value": "medium" },
          { "label": "Small", "value": "small" },
          { "label": "Extra small", "value": "extraSmall" }
        ]
      },
      "style": true
    },
    {
      "name": "primaryColor",
      "displayName": "Button Color",
      "type": "color",
      "default": "@primary",
      "style": true
    },
    {
      "name": "contrastColor",
      "displayName": "Icon & Text Color",
      "type": "color",
      "default": "@contrast:primaryColor",
      "enabled": { "type": "contained" },
      "style": true
    },
    {
      "name": "borderRadius",
      "displayName": "Rounding",
      "type": "number",
      "control": {
        "type": "slider",
        "max": 18,
        "min": 0
      },
      "default": 4,
      "enabled": { "type": ["contained", "outlined"] },
      "style": true
    },
    {
      "name": "shadow",
      "displayName": "Shadow",
      "type": "boolean",
      "default": false,
      "enabled": { "type": "contained" },
      "style": true
    },
    {
      "name": "upperCase",
      "displayName": "Uppercase",
      "type": "boolean",
      "default": true,
      "style": true
    },
    {
      "name": "action",

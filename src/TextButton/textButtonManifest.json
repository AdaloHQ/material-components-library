{
  "displayName": "Button",
  "icon": "./icon.png",
  "defaultWidth": 160,
  "defaultHeight": 36,
  "component": "./TextButton.js",
  "resizeY": true,
  "editStylesTitle": "Button",
  "props": [
    {
      "name": "type",
      "displayName": "Type",
      "type": "text",
      "default": "contained",
      "control": {
        "type": "menu",
        "options": [
          { "label": "Text Button", "value": "text" },
          { "label": "Outlined Button", "value": "outlined" },
          { "label": "Contained Button", "value": "contained" },
          { "label": "Custom Button", "value": "custom" }
        ]
      },
      "style": true
    },
    {
      "name": "text",
      "displayName": "Text",
      "type": "text",
      "default": "Button",
      "styles": {
        "fontFamily": "@body",
        "fontWeight": "600"
      }
    },
    {
      "name": "icon",
      "displayName": "Icon",
      "type": "icon",
      "customIcons": true,
      "default": "add"
    },
    {
      "name": "sizing",
      "displayName": "Text & Icon Sizing",
      "type": "number",
      "default": "medium",
      "control": {
        "type": "menu",
        "options": [
          { "label": "Gigantic", "value": "gigantic" },
          { "label": "Extra large", "value": "extraLarge" },
          { "label": "Large", "value": "large" },
          { "label": "Medium", "value": "medium" },
          { "label": "Small", "value": "small" },
          { "label": "Extra small", "value": "extraSmall" }
        ]
      },
      "style": true
    },
    {
      "name": "primaryColor",
      "displayName": "Button Color",
      "type": "color",
      "default": "@primary",
      "style": true
    },
    {
      "name": "contrastColor",
      "displayName": "Icon & Text Color",
      "type": "color",
      "default": "@contrast:primaryColor",
      "enabled": { "type": ["contained", "custom"] },
      "style": true
    },
    {
      "name": "border",
      "displayName": "Border",
      "type": "object",
      "control": {
        "type": "border"
      },
      "enabled": { "type": "custom" },
      "default": {
        "borderColor": "@primaryDark",
        "borderWidth": 1,
        "borderStyle": "solid"
      },
      "style": true
    },
    {
      "name": "advancedShadow",
      "displayName": "Shadow",
      "type": "object",
      "enabled": { "type": "custom" },
      "control": {
        "type": "shadow"
      },
      "default": {
        "enabled": false,
        "x": 0,
        "y": 2,
        "size": 4,
        "color": "rgba(0, 0, 0, 0.2)"
      },
      "style": true
    },
    {
      "name": "hover",
      "displayName": "Hover Effect",
      "type": "boolean",
      "default": true,
      "style": true
    },
    {
      "name": "borderRadius",
      "displayName": "Rounding",
      "type": "number",
      "control": {
        "type": "slider",
        "max": 18,
        "min": 0
      },
      "default": 4,
      "enabled": { "type": ["contained", "outlined", "custom"] },
      "style": true
    },
    {
      "name": "buttonOpacity",
      "displayName": "Opacity",
      "type": "number",
      "control": {
        "type": "slider",
        "max": 100,
        "min": 0
      },
      "default": 100,
      "defaultValue": 100,
      "enabled": { "type": "custom" },
      "style": true
    },
    {
      "name": "shadow",
      "displayName": "Shadow",
      "type": "boolean",
      "default": false,
      "enabled": { "type": "contained" },
      "style": true
    },
    {
      "name": "upperCase",
      "displayName": "Uppercase",
      "type": "boolean",
      "default": true,
      "style": true
    },
    {
      "name": "action",
